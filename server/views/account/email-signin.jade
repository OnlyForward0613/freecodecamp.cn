extends ../layout
block content
    style.
      footer {position: fixed;right: 0;left: 0;bottom:0;z-index: 1030;}
    .row
        .col-xs-12
            h2.text-center 账户登录:
            .col-sm-6.col-sm-offset-3
                form(method='POST', action='/api/users/login')
                    input(type='hidden', name='_csrf', value=_csrf)
                    .form-group
                        input.input-lg.form-control(type='email', name='email', id='email', placeholder='邮箱', autofocus=true, autocomplete=false)
                    .form-group
                        input.input-lg.form-control(type='password', name='password', id='password', placeholder='密码', autocomplete=false)
                    button.btn.btn-primary.btn-lg.btn-block(type='submit')
                        span.ion-android-hand
                        | 登录
                    .button-spacer
                    .button-spacer
                a.btn.btn-info.btn-lg.btn-block(href='/forgot') 忘记密码?
